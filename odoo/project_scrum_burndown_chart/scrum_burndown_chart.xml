<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="mrp_dashboard_kanban_view" model="ir.ui.view">
        	<field name="name">dashboard.kanban</field>
        	<field name="model">project.scrum.sprint</field>
        	<field name="arch" type="xml">
            	<kanban class="oe_background_grey" create="0">
            		<field name="id"/>
            		<field name="name"/>
            		<templates>
            			<t t-name="kanban-box">
            				<div t-attf-class="oe_kanban_color_#{kanban_getcolor(3)} oe_kanban_card oe_kanban_invoice">
	            				<t t-value="record.id" t-set="id_graph"/>
	            				<t t-call="DashBoardTop"/>
	            				<div class="o_kanban_card_content o_visible">
                                	<div class="row">
                                		<t t-call="DashBoardBody"/>
                                	</div>
                                	<t t-call="DashBoardBodyGraph"/>
                                </div>
	            			</div>
            			</t>
            			<t t-name="DashBoardTop">
	                        <div class="o_kanban_card_header">
	                            <div class="o_kanban_card_header_title">
	                                <h4 class="text-center">
	                                    <strong><field name="name"/></strong>
	                                </h4>
	                            </div>
	                        </div>
                    	</t>
                    	<t t-name="DashBoardBody">
                        	<div class="col-xs-5 o_kanban_primary_left">

	                        </div>
	                    </t>
                    	<t t-name="DashBoardBodyGraph">
	                        <div class="o_kanban_graph_section">

	                            <field name="kanban_burndown_chart" widget="kanban_graph"/>
	                        </div>
	                    </t>
            		</templates>
            	</kanban>
            </field>
        </record>


        <!--access to test case kanban view-->
    <record id="action_burndown" model="ir.actions.act_window">
      <field name="name">Burndown Chart</field>
      <field name="res_model">project.scrum.sprint</field>
      <field name="view_type">form</field>
      <field name="view_mode">kanban,form</field>
      <field name="view_id" ref="mrp_dashboard_kanban_view" />
    </record>

        <!--main scrum menu -->
    <menuitem sequence="24" action="action_burndown" id="menu_action_burndown" parent="project_scrum.menu_scrum_in_config" />



    </data>
</openerp>
