<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="inactive_employee_email_template" model="email.template">
            <field name="name">Employee Inactivation Notification</field>
            <field name="email_from">${object.admin_email}</field>
            <field name="subject">Employee ${object.name} was inactivated</field>
            <field name="email_to" >test@test.com</field>
            <field name="lang">en_US</field>
            <field name="auto_delete" eval="True"/>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="body_html">
                <![CDATA[
                <div style="font-family: 'Lucica Grande',
                 Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

                <p>Hello, ${object.name} became inactive.</p>
                <p>
                    &nbsp;&nbsp; You may check <a href="${object.url}/web#id=${object.id}&view_type=form&model=hr.employee&action=${object.action_id}">${object.name}</a>
                    for further information.
                </p>
                </div>
                ]]>
            </field>
        </record>
    </data>

</openerp>