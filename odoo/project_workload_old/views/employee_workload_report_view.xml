<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="custom_workload_class" name="workload_style" inherit_id="web.assets_backend">
             <xpath expr="." position="inside">
                <link rel="stylesheet" href="/project_workload/static/style.css"/>
             </xpath>
        </template>

        <record model='ir.ui.view' id='wizard_workload_report_form_view'>
            <field name="name">wizard.workload.report.form</field>
            <field name="model">wizard.workload.report</field>
            <field name="arch" type="xml">
                <form string="Employee Workload Report">
                    <group>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date"/>
                        </group>
                    </group>
                    <footer>
                        <button name="workload_report" type="object" default_focus="1"
                                string="Print" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='wizard_workload_report_act'>
            <field name="name">Employee Workload Report</field>
            <field name="res_model">wizard.workload.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_workload_report_form_view"/>
            <field name="target">new</field>
        </record>

        <record id="view_workload_filter" model="ir.ui.view">
            <field name="name">view.workload.filter</field>
            <field name="model">res.users</field>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <search>
                    <field name="display_name"/>
                    <filter name="free_employee" string="Free employee" domain="[('low_load', '=', 0)]"/>
                    <filter name="loaded_employee" string="Overloaded employee" domain="[('overload', '&gt;', 100)]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="workload_kanban_view">
            <field name="name">res.users.kanban</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="email"/>
                    <field name="image"/>
                    <field name="progress_rate"/>
                    <field name="maximum_rate"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content oe_kanban_card oe_kanban_card_workload">
                                <div>
                                    <div style="display: inline-block">
                                            <group>
                                                 <div class="o_kanban_image col-md-6">
                                                     <img t-att-src="kanban_image('res.users', 'image_small', record.id.value)"/>
                                                    <ul>
                                                        <li><strong class="oe_partner_heading"><field name="display_name"/></strong></li>
                                                        <li t-if="record.email.raw_value" class="o_text_overflow" style="word-wrap:normal"><field name="email"/></li>
                                                    </ul>
                                                     <div class="oe_kanban_details">
                                                        <div class="oe_kanban_partner_links"/>
                                                     </div>
                                                 </div>
                                            </group>
                                        <div class="col-md-6">
                                            <field name="progress_rate" widget="gauge" style="width:120px; height: 90px;"
                                                    options="{'max_field': 'maximum_rate'}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="workload_tree_view" model="ir.ui.view">
          <field name="name">project.scrum.us.tree</field>
          <field name="model">res.users</field>
          <field name="type">tree</field>
          <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="progress_rate"/>
            </tree>
          </field>
        </record>

        <record id="project_inherit_config_settings" model="ir.ui.view">
            <field name="name">project settings</field>
            <field name="model">project.config.settings</field>
            <field name="inherit_id" ref="project.view_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//group[2]" position="after">
                    <group string="Employee Workload">
                        <field name="working_hr"/>
                        <field name="no_of_days"/>
                        <field name="block_busy_users"/>
                    </group>
                </xpath>
            </field>
        </record>

         <record id="project_action_workload" model="ir.actions.act_window">
            <field name="name">Project Users</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree</field>
            <field name="search_view_id" ref="view_workload_filter"/>
            <field name="view_ids" eval="[
								 (5, 0, 0),
								 (0, 0, {'view_mode': 'kanban', 'view_id': ref('workload_kanban_view')}),
								 (0, 0, {'view_mode': 'tree', 'view_id': ref('workload_tree_view')}),
								 ]"/>
        </record>

        <report id="action_employee_workload"
                model="hr.employee"
                report_type="qweb-pdf"
                string="Employee Workload Report"
                name="workload_in_project.report_employee_workload"
                file="workload_in_project.report_employee_workload"/>

        <menuitem name="Report" parent="project.menu_project_management" id="workload_report" sequence="5"/>
        <menuitem name="Wokrload" parent="base.menu_main_pm" id="menu_project_workload" sequence="2"/>
        <menuitem name="Employee Wokrload" parent="menu_project_workload" id="menu_project_workload_employees" action="project_action_workload" sequence="1"/>
        <menuitem name="Workload Report" parent="menu_project_workload" id="employee_workload_report" action="wizard_workload_report_act" sequence="2"/>

        <menuitem name="Wokrload" parent="base.menu_main_pm" id="menu_project_workload" sequence="2"/>
        <menuitem name="Employee Wokrload" parent="menu_project_workload" id="menu_project_workload_employees" action="project_action_workload" sequence="1"/>
        <menuitem name="Workload Report" parent="menu_project_workload" id="employee_workload_report" action="wizard_workload_report_act" sequence="2"/>

    </data>
</openerp>